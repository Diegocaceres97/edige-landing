    <script>
      const country = window.localStorage.getItem("country") ?? 'col';
      
      // Update prices based on country
      if (country !== 'CO') {
        // For non-Colombian users, show USD prices
        const basicPrice = document.querySelector('.basic-price');
        const proPrice = document.querySelector('.pro-price');
        
        if (basicPrice) {
          basicPrice.innerHTML = '$100USD<span class="text-2xl">/mo</span>';
        }
        if (proPrice) {
          proPrice.innerHTML = '$140USD<span class="text-2xl">/mo</span>';
        }
      }
    </script>
