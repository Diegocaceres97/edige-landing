---
import Place from '@/components/place.astro';
import Layout from '../layouts/Layout.astro';
import ContactUs from '@/sections/ContactUs.astro';
import Footer from '@/sections/Footer.astro';
import Pricing from '@/sections/Pricing.astro';
import Testimonials from '@/sections/Testimonials.astro';
---

<Layout >

<div class="flex flex-col min-h-[100dvh]">
  <header id="header-nav" class="px-4 lg:px-6 h-14 flex items-center bg-background shadow dark:shadow-white text-black dark:text-white">
		<a class="flex items-center justify-center" href="https://edige.info/">
			<img src="/assets/logo_edige_1.svg" alt="Edige logo" width="100" height="100">
		</a>
		<nav class="ml-auto flex gap-4 sm:gap-6" aria-labelledby="header-nav" aria-current="page">
		  <a class="text-sm font-medium hover:underline underline-offset-4" href="#contact" >
			Contacto
		  </a>
		  <a class="text-sm font-medium hover:underline underline-offset-4" href="#testimonials" >
			Testimonios
		  </a>
		  <a class="text-sm font-medium hover:underline underline-offset-4" href="#pricing" >
			Precios
		  </a>
		  <Place server:defer />
		</nav>
	  </header>

  <main class="flex-1">
    <ContactUs id="contact" />
    <Testimonials id="testimonials" />
    <Pricing id="pricing" />
  </main>
  <Footer />
  
</div>

</Layout>

<style>
		h1, h2, h3, h4, h5, h6 {
		 font-family: 'Inter', sans-serif;
		  --font-sans-serif: 'Inter'; }
</style>
