---
import Place from '@/components/Place.astro';
import Layout from '../layouts/Layout.astro';
import ContactUs from '@/sections/ContactUs.astro';
import Footer from '@/sections/Footer.astro';
import Pricing from '@/sections/Pricing.astro';
import Testimonials from '@/sections/Testimonials.astro';
---

<Layout >

<div class="dark:bg-slate-800 flex flex-col min-h-[100dvh]">
  <header id="header-nav" class="px-4 lg:px-6 h-14 flex items-center bg-background shadow dark:shadow-white text-black dark:text-white" role="banner">
		<a class="flex items-center justify-center" href="https://edige.info/" id="logo-edige" aria-label="Ir a la p√°gina principal de Edige">
			<img src="/assets/logo_edige_1.svg" alt="Edige logo" width="100" height="100">
		</a>
		<label class="switch" aria-label="Cambiar tema">
			<input type="checkbox" id="toggle-theme" aria-label="Cambiar entre tema claro y oscuro">
			<span class="slider round"></span>
		</label>
		<nav class="ml-auto flex gap-4 sm:gap-6" aria-label="Navegaci√≥n principal">
		  <a class="text-sm font-medium hover:underline underline-offset-4" href="#contact" aria-label="Ir a la secci√≥n de contacto">
			Contacto
		  </a>
		  <a class="text-sm font-medium hover:underline underline-offset-4" href="#testimonials" aria-label="Ir a la secci√≥n de testimonios">
			Testimonios
		  </a>
		  <a class="text-sm font-medium hover:underline underline-offset-4" href="#pricing" aria-label="Ir a la secci√≥n de precios">
			Precios
		  </a>
		  <Place server:defer />
		</nav>
	  </header>

  <main class="flex-1" role="main">
    <ContactUs id="contact" />
    <Testimonials id="testimonials" />
    <Pricing id="pricing" />
  </main>
  <Footer />
  
</div>

</Layout>

<script>
	const theme = document.getElementById('toggle-theme') as HTMLInputElement;
	const logo = document.getElementById('logo-edige');

	
  if(window.matchMedia("(max-width: 768px)").matches) {
	logo!.style.display = 'none';
  }


	// Verificar si hay un estado guardado en localStorage
	if (localStorage.getItem("theme") === "dark") {
    theme.checked = true; // Activar el toggle si est√° en dark
    document.body.classList.add("dark"); // Aplicar la clase si es necesario
  }

  // Evento para cambiar el estado del tema
  theme.addEventListener("change", function () {
    if (theme.checked) {
      localStorage.setItem("theme", "dark"); // Guardar "dark" en localStorage
      document.body.classList.add("dark"); // Aplicar la clase
    } else {
      localStorage.setItem("theme", "light"); // Guardar "light"
      document.body.classList.remove("dark"); // Quitar la clase
    }
  });
</script>

<style>
		h1, h2, h3, h4, h5, h6 {
		 font-family: 'Inter', sans-serif;
		  --font-sans-serif: 'Inter'; }


/* The switch - the box around the slider */
.switch {
  position: relative;
  display: inline-block;
  min-width: 3.5rem;
  height: 34px;
}

/* Hide default HTML checkbox */
.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

/* The slider */
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #32435d;
  -webkit-transition: .4s;
  transition: .4s;
}

.slider:before {
  position: absolute;
  content: "üåô";
  padding: 2px 5px;
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

		  input:checked + .slider {
  background-color: white;
}

input:focus + .slider {
  box-shadow: 0 0 1px black;
}

input:checked + .slider:before {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
  background-color: #32435d;
  padding: 2px 5px;
  content: "‚òÄÔ∏è";
}

		  .slider.round {
  border-radius: 34px;
}

.slider.round:before {
  border-radius: 50%;
}
</style>
